extends header
block append content
    .container
        form.col-sm-offset-4.col-sm-4.form-horizontal(role='form' method='post')
            fieldset
                legend 用户登录
                !{message}
                .form-group
                    label.col-sm-3.control-label(for='username') 用户名
                    .col-sm-9
                        input#username.form-control(type='text' name='username' placeholder='username' required)
                .form-group
                    label.col-sm-3.control-label.text-left(for='password') 密码
                    .col-sm-9
                        input#password.form-control(type='password' name='password' placeholder='password' required)
                .form-group
                    .col-sm-offset-3.col-sm-9
                        button.btn.btn-primary(type='submit') 登录





